{
  "firestore": {
    "database": "(default)",
    "location": "asia-southeast1",
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": []
    }
  ],
  "storage": {
    "rules": "storage.rules"
  },
  "hosting": {
    "public": "out",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/",
        "destination": "/index.html"
      },
      {
        "source": "/menu",
        "destination": "/menu/index.html"
      },
      {
        "source": "/about",
        "destination": "/about/index.html"
      },
      {
        "source": "/contact",
        "destination": "/contact/index.html"
      },
      {
        "source": "/cart",
        "destination": "/cart/index.html"
      },
      {
        "source": "/checkout",
        "destination": "/checkout/index.html"
      },
      {
        "source": "/auth/login",
        "destination": "/auth/login/index.html"
      },
      {
        "source": "/auth/register",
        "destination": "/auth/register/index.html"
      },
      {
        "source": "/auth/test",
        "destination": "/auth/test/index.html"
      },
      {
        "source": "/admin",
        "destination": "/admin/index.html"
      },
      {
        "source": "/admin/dashboard",
        "destination": "/admin/dashboard/index.html"
      },
      {
        "source": "/admin/debug",
        "destination": "/admin/debug/index.html"
      },
      {
        "source": "/admin/login",
        "destination": "/admin/login/index.html"
      }
    ],
    "cleanUrls": true,
    "trailingSlash": false,
    "errorHandlers": [
      {
        "type": "404",
        "file": "/404.html"
      }
    ],
    "headers": [
      {
        "source": "**/*.@(js|css)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=31536000"
          }
        ]
      },
      {
        "source": "**",
        "headers": [
          {
            "key": "X-Content-Type-Options",
            "value": "nosniff"
          }
        ]
      }
    ]
  }
}
