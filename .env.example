# Firebase Configuration
# Copy this file to .env.local and fill in your Firebase project details

# Server-side Firebase configuration (used by Firebase Functions)
# These are NOT exposed to the frontend
FIREBASE_API_KEY=your_api_key_here
FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
FIREBASE_PROJECT_ID=your_project_id_here
FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id_here
FIREBASE_APP_ID=your_app_id_here
FIREBASE_MEASUREMENT_ID=your_measurement_id_here

# Business Configuration
# Tax percentage (0.00 = 0%, 0.08 = 8%, etc.)
NEXT_PUBLIC_TAX_PERCENTAGE=0.00
# Delivery fee in Rs.
NEXT_PUBLIC_DELIVERY_FEE=0.00
