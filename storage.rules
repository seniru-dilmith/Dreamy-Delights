rules_version = '2';

// Firebase Storage Rules for Dreamy Delights
service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all files
    match /{allPaths=**} {
      allow read: if true;
    }
    
    // Allow write access to product images only from backend (using service account)
    match /products/{fileName} {
      allow write: if true; // Backend uses service account which bypasses these rules
    }
    
    // For user uploads (if needed in the future)
    match /user-uploads/{userId}/{fileName} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
